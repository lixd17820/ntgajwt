<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingTop="3dip" android:id="@+id/line_layout_but">
		<EditText android:id="@+id/Edit_dm" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:hint="请输入代码" android:inputType="number">
		</EditText>
		<EditText android:id="@+id/Edit_fk" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:hint="罚款金额" android:inputType="number"></EditText>
		<EditText android:id="@+id/Edit_fz" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:hint="违法记分" android:inputType="number"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingTop="3dip">
		<EditText android:id="@+id/Edit_hz" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:hint="输入汉字，多条件空格分开">
		</EditText>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingTop="3dip">
		<CheckBox android:text="罚款" android:id="@+id/ChBox_fkbj"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<CheckBox android:text="警告" android:id="@+id/ChBox_jgbj"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<CheckBox android:text="强制" android:id="@+id/ChBox_qzcxbj"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<CheckBox android:text="有效" android:id="@+id/ChBox_yxqx"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1"
		android:drawSelectorOnTop="false">
	</ListView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_alignParentBottom="true" android:layout_height="wrap_content"
		android:orientation="horizontal" android:paddingTop="3dip"
		android:background="#aaa">
		<Button android:text="查找" android:id="@+id/Butt_search"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button android:text="详细" android:id="@+id/Butt_wfdm_detail"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button android:text="确定" android:id="@+id/Butt_wfdm_ok"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
