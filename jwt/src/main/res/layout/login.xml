<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/LinearLayout01" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:orientation="vertical">
		<TextView android:layout_width="wrap_content" android:text="民警警号"
			android:textSize="20sp" android:layout_marginTop="10dp"
			android:layout_height="wrap_content" />
		<EditText android:text="" android:id="@+id/Edit_login_mjjh"
			android:layout_marginTop="10dp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:inputType="number"
			android:layout_marginLeft="40dp" />
		<TextView android:layout_width="wrap_content"
			android:textSize="20sp" android:layout_marginTop="10dp"
			android:layout_alignParentTop="true" android:text="登录密码"
			android:layout_height="wrap_content" />
		<EditText android:text="" android:id="@+id/Edit_login_passwd"
			android:layout_marginTop="10dp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="40dp"
			android:inputType="textPassword|number"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:id="@+id/bottom_but"
		android:gravity="center_horizontal" android:paddingTop="3dip"
		android:background="#aaa" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true">
		<Button android:id="@+id/but_login" android:layout_weight="1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="登录" />
		<Button android:id="@+id/but_login_cancel"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="取消" />
	</LinearLayout>

</RelativeLayout>
